.container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

.header {
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.agent-group {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.agent-header {
  padding: 20rpx;
  background-color: #f8f8f8;
  border-bottom: 1px solid #eee;
}

.agent-id {
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
}

.latest-message {
  font-size: 26rpx;
  color: #999;
  margin-top: 8rpx;
}

.conversation-item {
  padding: 20rpx;
  border-bottom: 1px solid #eee;
}

.conversation-item:last-child {
  border-bottom: none;
}

.conversation-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.conversation-date {
  font-size: 24rpx;
  color: #999;
}

.conversation-duration {
  font-size: 24rpx;
  color: #666;
}

.conversation-content {
  margin: 10rpx 0;
}

.conversation-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.conversation-preview {
  font-size: 26rpx;
  color: #666;
}

.conversation-stats {
  display: flex;
  gap: 20rpx;
  margin-top: 10rpx;
}

.stat-item {
  font-size: 24rpx;
  color: #999;
}

.empty-list {
  text-align: center;
  padding: 40rpx;
  color: #999;
}

.loading, .no-more {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
}

.login-btn {
  margin-top: 20rpx;
  background-color: #007AFF;
  color: #fff;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 8rpx;
}