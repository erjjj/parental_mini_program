/* pages/materials/materials.wxss */
.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  width: 100%;
  height: 80rpx;
  background-color: #4A90E2;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0;
  z-index: 100;
}

.title {
  color: #ffffff;
  font-size: 36rpx;
  font-weight: bold;
}

/* 搜索栏样式 */
.search-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  margin-top: 80rpx;
  margin-bottom: 0rpx
  background-color: #ffffff;
  width: 100%;
  box-sizing: border-box;
  border-bottom: none; /* 移除底部边框 */
}

.search-input-wrapper {
  flex: 1;
  height: 70rpx;
  background-color: #f5f5f5;
  border-radius: 35rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.search-input {
  flex: 1;
  height: 70rpx;
  font-size: 28rpx;
  margin-left: 10rpx;
}

.upload-btn {
  width: 70rpx;
  height: 70rpx;
  background-color: #4A90E2;
  border-radius: 35rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
}

.upload-icon {
  color: #ffffff;
  font-size: 40rpx;
  font-weight: bold;
}

/* 分类导航样式 */
.category-tabs {
  display: flex;
  padding: 0;
  background-color: #ffffff;
  overflow-x: auto;
  white-space: nowrap;
  width: 100%;
  box-sizing: border-box;
  margin-top: 0rpx
  border-top: none; /* 移除顶部边框 */
  margin-bottom: 20rpx;
  position: fixed; /* 固定定位 */
  top: 170rpx; /* 位于搜索栏下方，80rpx(header) + 90rpx(search-bar高度) */
  z-index: 98; /* 确保在大多数内容上方，但低于搜索栏 */
}

.category-item {
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
  flex-shrink: 0; /* 防止项目被压缩 */
}

.category-item.active {
  color: #4A90E2;
  font-weight: bold;
}

.category-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 30rpx;
  right: 30rpx;
  height: 4rpx;
  background-color: #4A90E2;
  border-radius: 2rpx;
}

/* 官方推荐区域样式 */
.official-section {
  background-color: #ffffff;
  margin: 20rpx 0;
  padding: 20rpx 0;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.view-more, .sort-btn {
  font-size: 26rpx;
  color: #4A90E2;
}

.official-scroll {
  width: 100%;
}

.official-list {
  display: flex;
  padding: 0 20rpx;
}

.official-item {
  width: 200rpx;
  margin-right: 20rpx;
}

.official-cover {
  width: 200rpx;
  height: 280rpx;
  border-radius: 8rpx;
  background-color: #f0f0f0;
}

.official-info {
  margin-top: 10rpx;
}

.official-title {
  font-size: 26rpx;
  color: #333;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.official-category {
  font-size: 22rpx;
  color: #999;
}

/* 我的上传区域样式 */
.my-uploads-section {
  background-color: #ffffff;
  margin: 20rpx 0;
  padding: 10rpx 0;
  bottom: 0;
  width: 100%
}

.material-list {
  padding: 0 30rpx;
}

.material-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.material-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  color: #ffffff;
  margin-right: 20rpx;
}

.material-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.material-title {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.material-meta {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.material-category {
  font-size: 24rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  margin-right: 10rpx;
}

.material-date {
  font-size: 24rpx;
  color: #999;
}

.material-status {
  display: flex;
  align-items: center;
}

.status-tag {
  font-size: 22rpx;
  padding: 2rpx 10rpx;
  border-radius: 4rpx;
}

.status-tag.learned {
  color: #52c41a;
  background-color: #f6ffed;
  border: 1rpx solid #b7eb8f;
}

.status-tag.pending {
  color: #faad14;
  background-color: #fffbe6;
  border: 1rpx solid #ffe58f;
}

.material-actions {
  display: flex;
  align-items: center;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 10rpx;
}

.action-icon {
  font-size: 32rpx;
}

/* 空列表样式 */
.empty-list {
  padding: 15rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.empty-icon {
  display:none
}

.empty-list text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.add-btn {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #4A90E2;
  color: #ffffff;
  font-size: 28rpx;
  border-radius: 40rpx;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-content {
  width: 80%;
  background-color: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
  max-height: 90vh;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-body {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.upload-options {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 0;
}

.upload-option {
  width: 50%;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.option-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.option-icon.document {
  background-color: #e6f7ff;
  color: #1890ff;
}

.option-icon.image {
  background-color: #f6ffed;
  color: #52c41a;
}

.option-icon.text {
  background-color: #fff7e6;
  color: #fa8c16;
}

.option-icon.audio {
  background-color: #f9f0ff;
  color: #722ed1;
}

.option-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 6rpx;
}

.option-desc {
  font-size: 22rpx;
  color: #999;
  text-align: center;
}

.form-item {
  margin-bottom: 20rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.form-textarea {
  width: 100%;
  height: 240rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.picker {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.file-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

.file-name {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.file-size {
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
}

.file-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #f5f5f5;
  color: #333;
  font-size: 28rpx;
  border-radius: 8rpx;
  border: 1rpx solid #e0e0e0;
}

.modal-footer {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.cancel-btn, .confirm-btn {
  width: 45%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background-color: #4A90E2;
  color: #ffffff;
}