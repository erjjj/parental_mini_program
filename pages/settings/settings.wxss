/* pages/settings/settings.wxss */
.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  width: 100%;
  height: 80rpx;
  background-color: #4A90E2;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0;
  z-index: 100;
}

.title {
  color: #ffffff;
  font-size: 36rpx;
  font-weight: bold;
}

/* 登录区域样式 */
.login-section {
  width: 100%;
  background-color: #ffffff;
  padding: 30rpx;
  margin-top: 80rpx;
  box-sizing: border-box;
}

.login-header {
  margin-bottom: 30rpx;
}

.login-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.login-subtitle {
  font-size: 28rpx;
  color: #999;
}

.login-buttons {
  display: flex;
  justify-content: space-between;
}

.btn {
  width: 45%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 32rpx;
}

.login-btn {
  background-color: #4A90E2;
  color: #ffffff;
}

.register-btn {
  background-color: #ffffff;
  color: #4A90E2;
  border: 1px solid #4A90E2;
}

/* 用户信息区域样式 */
.user-info-section {
  width: 100%;
  background-color: #ffffff;
  padding: 30rpx;
  margin-top: 80rpx;
  box-sizing: border-box;
}

.user-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.user-id, .user-email {
  font-size: 28rpx;
  color: #999;
  display: block;
  margin-bottom: 5rpx;
}

.logout-btn {
  width: 100%;
  background-color: #f5f5f5;
  color: #ff4d4f;
  border: none;
}

/* 设置列表样式 */
.settings-list {
  width: 100%;
  margin-top: 20rpx;
}

.settings-group {
  background-color: #ffffff;
  margin-bottom: 20rpx;
}

.settings-group-title {
  font-size: 28rpx;
  color: #999;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.settings-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.settings-item:last-child {
  border-bottom: none;
}

.item-label {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.item-value {
  font-size: 28rpx;
  color: #999;
  margin-right: 20rpx;
}

.item-arrow {
  font-size: 32rpx;
  color: #999;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-content {
  width: 80%;
  background-color: #ffffff;
  border-radius: 10rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.modal-body {
  padding: 30rpx;
}

.form-item {
  margin-bottom: 20rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx 30rpx;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #999;
}

.confirm-btn {
  background-color: #4A90E2;
  color: #ffffff;
}

.modal-switch {
  text-align: center;
  padding: 20rpx 0 30rpx;
  font-size: 28rpx;
  color: #999;
}

.switch-link {
  color: #4A90E2;
  margin-left: 10rpx;
}