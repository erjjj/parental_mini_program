/* pages/instructions/instructions.wxss */
.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.header {
  width: 100%;
  height: 80rpx;
  background-color: #4A90E2;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0;
  z-index: 100;
}

.title {
  color: #ffffff;
  font-size: 36rpx;
  font-weight: bold;
}

.back-btn {
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}

.back-icon {
  font-size: 36rpx;
  color: #ffffff;
}

.instruction-container {
  width: 100%;
  margin-top: 100rpx;
  padding: 30rpx;
  box-sizing: border-box;
}

.instruction-header {
  margin-bottom: 20rpx;
}

.instruction-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 指令类型选择区域 */
.instruction-types {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.type-item {
  width: 30%;
  height: 160rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.type-item.selected {
  background-color: #e6f0ff;
  border: 2rpx solid #4A90E2;
}

.type-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.type-name {
  font-size: 28rpx;
  color: #333;
}

/* 模板选择区域 */
.instruction-templates {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.template-header {
  margin-bottom: 20rpx;
}

.template-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.template-list {
  max-height: 400rpx;
  overflow-y: auto;
}

.template-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.template-item:last-child {
  border-bottom: none;
}

.template-content {
  flex: 1;
}

.template-name {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.template-desc {
  font-size: 24rpx;
  color: #999;
  display: block;
}

.template-select {
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  border: 1rpx solid #ddd;
  display: flex;
  justify-content: center;
  align-items: center;
}

.template-select.selected {
  background-color: #4A90E2;
  border-color: #4A90E2;
}

.select-icon {
  color: #fff;
  font-size: 24rpx;
}

/* 指令输入区域 */
.instruction-input {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.input-header {
  margin-bottom: 20rpx;
}

.input-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.instruction-textarea {
  width: 100%;
  height: 200rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  background-color: #f9f9f9;
  margin-bottom: 20rpx;
}

/* 参数设置区域 */
.param-section {
  margin-top: 20rpx;
}

.param-header {
  margin-bottom: 20rpx;
}

.param-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.param-list {
  width: 100%;
}

.param-item {
  margin-bottom: 20rpx;
}

.param-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.param-picker {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background-color: #f9f9f9;
  display: flex;
  align-items: center;
}

/* 按钮区域 */
.action-buttons {
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx 30rpx;
  margin-top: auto;
}

.btn {
  width: 45%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  font-size: 32rpx;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
  border: 1rpx solid #ddd;
}

.send-btn {
  background-color: #4A90E2;
  color: #ffffff;
}