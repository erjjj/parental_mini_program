/**new_index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

.container{
  display:flex;
  flex-direction:column;
  background-color: #f5f5f5;
  height:auto;
  margin:0;
  padding:0;
}

/* 顶部搜索和操作区域 */
.header {
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  position: relative;
  display: flex;
  width: 90%;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.search-dropdown {
  width: 60%;
  height: 70rpx;
  background-color: #f5f5f5;
  border-radius: 35rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  position: relative;
  flex-grow: 1;
}

.search-icon {
  font-size: 32rpx;
  color: #999;
  margin-right: 10rpx;
}

.search-input {
  flex: 1;
  height: 70rpx;
  font-size: 28rpx;
  border: none;
}

.dropdown-icon {
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
}

.header-agent-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 35rpx;
  margin-left: auto;
}



/* 登录按钮样式 */
.login-btn {
  margin-left: 20rpx;
  padding: 10rpx 20rpx;
  background-color: #4A90E2;
  color: #ffffff;
  border-radius: 30rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  white-space: nowrap;
}

/* 智能体信息展示区域 */
.agent-info {
  background-color: #ffffff;
  padding: 30rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  height: 500rpx;
  width:90%;
}

.agent-info-content {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  width: 100%;
}

.agent-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.agent-description-scroll {
  width: 100%;
  height: calc(50vh - 150rpx);
  margin-bottom: 20rpx;
}

.agent-description {
  font-size: 28rpx;
  color: #666;
  text-align: left;
  line-height: 1.5;
  display: block;
}

/* 容纳智能体设置的功能按钮 */
.status-action-row{
  position: relative;
  display:flex;
  align-items: center;
  justify-content: center;
  height: 90rpx;
  background: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  width: 95%;
}

/* 状态指示条 */
.status-bar {
  height: 80rpx;
  width: 180rpx;
  background: #4A90E2;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  color: #f5f5f5;
  margin-right: auto;
}

.status-icon {
  width: 20rpx;
  height: 20rpx;
  border-radius: 10rpx;
  background-color: #00ff00; /* 可以根据状态变化：红色(离线)、黄色(待机)、绿色(在线) */
  margin-right: 10rpx;
}

.status-text {
  font-size: 30rpx;
  flex: 1;
  color:#f5f5f5
}

.settings-btn {
  height: 80rpx;
  width: 180rpx;
  display: flex;
  align-items: center;
  background: #4A90E2;
  color: #ffffff;
  border-radius: 8rpx;
}

.settings-icon {
  font-size: 28rpx;
  margin-right: 6rpx;
  color: #f5f5f5;
}
.add-agent {
  height: 80rpx;
  width: 180rpx;
  display: flex;
  align-items: center;
  background: #4A90E2;
  border-radius: 8rpx;
  color: #ffffff;
  margin-left: auto;
}
.add-icon {
  font-size: 40rpx;
  color: #ffffff;
  margin-right: 6rpx;
}


/* 音色选择列表 */
.voice-list-container {
  margin: 10rpx 30rpx;  /* 减小外边距 */
  border-radius: 10rpx;
  padding: 15rpx;  /* 减小内边距 */
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  height: 500rpx;  /* 适当减小高度 */
  width: 95%;
}

.voice-list-title {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
  margin-left:0;
}

.voice-scroll {
  height: 450rpx;
  overflow-y: auto;
}

.voice-item {
  background-color: #ffffff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.voice-item.active {
  border: 2rpx solid #4A90E2;
}

.voice-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;
}

.voice-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  overflow: hidden;
}

.voice-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}


.voice-description {
  font-size: 24rpx;
  color: #666;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.voice-play {
  width: 60rpx;
  height: 60rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.play-icon {
  font-size: 32rpx;
  color: #4A90E2;
}

/* 下拉菜单样式 */
.dropdown-menu {
  position: absolute;
  top: 90rpx;
  left: 30rpx;
  width: calc(100% - 150rpx);
  background-color: #ffffff;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
  max-height: 600rpx;
  overflow-y: auto;
}

.dropdown-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
  align-items: center;
}

.dropdown-item:last-child {
  border-bottom: none;
}

.dropdown-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin-right: 20rpx;
}

.dropdown-name {
  font-size: 28rpx;
  color: #333;
}