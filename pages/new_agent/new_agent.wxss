/* new_agent.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f8f8f8;
}

.header {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #eeeeee;
  position: relative;
}

.back-btn {
  padding: 10rpx;
}

.back-icon {
  font-size: 40rpx;
  color: #333333;
}

.title {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-weight: 500;
  color: #333333;
  margin-right: 50rpx; /* 为了平衡左侧返回按钮的空间 */
}

.agent-list {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

.agent-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.agent-item.selected {
  background-color: #f0f9ff;
  border: 2rpx solid #1aad19;
}

.agent-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #f0f0f0;
}

.agent-info {
  flex: 1;
  overflow: hidden;
}

.agent-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 10rpx;
  display: block;
}

.agent-description {
  font-size: 26rpx;
  color: #666666;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.create-agent-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 30rpx;
  padding: 24rpx 0;
  background-color: #ffffff;
  border: 2rpx solid #dddddd;
  border-radius: 40rpx;
  color: #333333;
  font-size: 30rpx;
}

.add-icon {
  font-size: 36rpx;
  margin-right: 10rpx;
}
