/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

/* 快捷操作区域样式 */
.quick-actions {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 20rpx;
  background-color: #ffffff;
  margin: 20rpx 30rpx; /* 减小左右外边距 */
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  width: calc(100% - 60rpx); /* 确保宽度计算正确 */
  box-sizing: border-box;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 33.33%;
}

.action-icon {
  width: 100rpx; /* 增大图标尺寸 */
  height: 100rpx;
  background-color: #f0f7ff;
  border-radius: 12rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 10rpx;
  font-size: 48rpx; /* 增大图标字体 */
}

.action-text {
  font-size: 28rpx;
  color: #333333;
}

/* 最近对话记录区域样式 */
.recent-conversations {
  background-color: #ffffff;
  margin: 20rpx 30rpx; /* 减小左右外边距 */
  padding: 30rpx; /* 增加内边距 */
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  width: calc(100% - 60rpx); /* 确保宽度计算正确 */
  box-sizing: border-box;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 10rpx; /* 添加底部间距 */
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.view-all {
  font-size: 26rpx;
  color: #4A90E2;
}

.conversation-container {
  min-height: 200rpx;
  position: relative;
}

.conversation-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.conversation-item:last-child {
  border-bottom: none;
}

.conversation-time {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 10rpx;
}

.conversation-preview {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.5;
}

.empty-list {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  color: #999999;
  font-size: 28rpx;
}
