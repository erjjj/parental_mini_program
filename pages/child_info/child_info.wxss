/* pages/child_info/child_info.wxss */

page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

.container {
  padding: 0;
  background-color: #f5f5f5;
  height: auto;
  display: flex;
  flex-direction: column;
}

/* 用户信息顶部条 */
.user-info-bar {
  width: 100%;
  height: 100rpx;
  background-color: #4A90E2;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  position: relative;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.user-nickname {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
}

.user-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  border: 2rpx solid #ffffff;
}

.login-btn {
  color: #ffffff;
  font-size: 32rpx;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
}

/* 孩子信息展示区 */
.child-info-container {
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  background-color: #ffffff;
  border-radius: 12rpx;
  margin-top: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.child-avatar-container {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}

.child-avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  border: 4rpx solid #4A90E2;
}

.avatar-upload-btn {
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  background-color: rgba(74, 144, 226, 0.8);
  color: white;
  font-size: 24rpx;
  border-radius: 25rpx;
  text-align: center;
  margin: 10rpx auto 0;
}

.edit-profile-btn {
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #4A90E2;
  color: white;
  font-size: 28rpx;
  border-radius: 30rpx;
  text-align: center;
  margin: 20rpx auto;
}

.child-details {
  margin-bottom: 30rpx;
}

.child-detail-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
  padding: 10rpx;
  border-radius: 8rpx;
}

.child-detail-item:active {
  background-color: #f0f0f0;
}

.detail-label {
  width: 150rpx;
  font-size: 28rpx;
  color: #666;
}

.detail-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  min-height: 40rpx;
}

.detail-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #4A90E2;
  padding: 10rpx 0;
}

.detail-textarea {
  flex: 1;
  width: 100%;
  height: 150rpx;
  font-size: 28rpx;
  color: #333;
  border: 1rpx solid #4A90E2;
  border-radius: 8rpx;
  padding: 10rpx;
  margin-top: 10rpx;
}

/* 语言切换 */
.language-switch {
  display: flex;
  border-radius: 8rpx;
  overflow: hidden;
  border: 1rpx solid #4A90E2;
  width: 200rpx;
}

.language-option {
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
  font-size: 24rpx;
  color: #4A90E2;
  background-color: #ffffff;
}

.language-option.selected {
  color: #ffffff;
  background-color: #4A90E2;
}

/* 标签区域 */
.tags-section {
  margin-top: 20rpx;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
  max-height: 200rpx;
  overflow-y: auto;
}

.tag-item {
  background-color: #f0f0f0;
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 24rpx;
  color: #666;
  display: inline-block;
}

.tag-item.selected {
  background-color: #4A90E2;
  color: #ffffff;
}

.tag-select-btn {
  display: inline-block;
  background-color: #ffffff;
  border: 1rpx dashed #4A90E2;
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  color: #4A90E2;
}

/* 智能体切换按钮 */
.agent-switch-btn {
  width: 90%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #4A90E2;
  color: white;
  font-size: 32rpx;
  border-radius: 44rpx;
  text-align: center;
  margin: 50rpx auto;
}

/* 标签选择器弹窗 */
.tag-selector-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.tag-selector-content {
  width: 80%;
  background-color: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

/* 设备匹配弹窗 */
.device-match-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.device-match-content {
  width: 80%;
  background-color: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  padding-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.tag-selector-header {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.tag-selector-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.tag-selector-close {
  font-size: 40rpx;
  color: #999;
}

.device-match-header {
  padding: 40rpx 20rpx 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.device-match-icon {
  margin-right: 10rpx;
}

.device-match-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.tag-selector-list {
  padding: 20rpx;
  max-height: 600rpx;
  overflow-y: auto;
  display: flex;
  flex-wrap: wrap;
}

.tag-selector-item {
  background-color: #f0f0f0;
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 24rpx;
  color: #666;
}

.tag-selector-item.selected {
  background-color: #4A90E2;
  color: #ffffff;
}

.tag-selector-footer {
  padding: 20rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  justify-content: center;
}

.tag-confirm-btn {
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #4A90E2;
  color: white;
  font-size: 28rpx;
  border-radius: 40rpx;
}

.device-match-body {
  padding: 20rpx 30rpx;
}

.form-item {
  margin-bottom: 20rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  color: #333;
}

.device-match-footer {
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
}

.device-match-cancel-btn {
  width: 45%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #f0f0f0;
  color: #333;
  font-size: 28rpx;
  border-radius: 40rpx;
  text-align: center;
}

.device-match-confirm-btn {
  width: 45%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #4A90E2;
  color: white;
  font-size: 28rpx;
  border-radius: 40rpx;
  text-align: center;
}