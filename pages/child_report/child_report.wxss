.container {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  height: 100vh;
  background-color: #f5f5f5;
  padding: 0;
  margin: 0;
}

/* 顶部标题样式 */
.header {
  width: 100%;
  height: 80rpx;
  background-color: #4A90E2;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0;
  z-index: 100;
}

.title {
  color: #ffffff;
  font-size: 36rpx;
  font-weight: bold;
}

/* 成长报告聊天框样式 */
.report-chat-container {
  flex: 1;
  width: 95vw;
  margin: 100rpx auto 120rpx;
  padding: 20rpx;
  overflow-y: auto;
  box-sizing: border-box;
}

.report-item {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.report-header {
  display: flex;
  justify-content: center;
  margin-bottom: 15rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.report-date {
  font-size: 24rpx;
  color: #999;
}

.report-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.message-bubble {
  max-width: 90%;
  padding: 20rpx;
  border-radius: 10rpx;
  background-color: #e8f4ff;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.05);
}

.achievement-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #4A90E2;
  margin-bottom: 10rpx;
}

.achievement-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

/* 空列表提示 */
.empty-list {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 30rpx;
}

.empty-tip {
  font-size: 26rpx;
  color: #bbb;
  margin-top: 20rpx;
}

/* 底部按钮样式 */
.button-group {
  width: 100%;
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 100;
}

.function-btn {
  width: 45%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.conversation-btn {
  background-color: #f0f0f0;
  color: #666;
}

.generate-btn {
  background-color: #4A90E2;
  color: #fff;
}