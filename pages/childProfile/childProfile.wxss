/* pages/childProfile/childProfile.wxss */
.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  width: 100%;
  height: 80rpx;
  background-color: #4A90E2;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0;
  z-index: 100;
  margin-bottom: 0;
}

.title {
  color: #ffffff;
  font-size: 36rpx;
  font-weight: bold;
}

.back-btn {
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}

.back-icon {
  font-size: 36rpx;
  color: #ffffff;
}

.form-container {
  width: 100%;
  margin-top: 100rpx;
  padding: 30rpx;
  box-sizing: border-box;
  background-color: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 1px solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background-color: #f9f9f9;
}

.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100rpx;
  margin-bottom: 30rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  background-color: #f0f0f0;
  margin-bottom: 10rpx;
}

.avatar-tip {
  font-size: 24rpx;
  color: #999;
}

.textarea {
  width: 100%;
  height: 160rpx;
  border: 1px solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  background-color: #f9f9f9;
}

.language-switch {
  display: flex;
  margin-top: 10rpx;
}

.language-option {
  padding: 10rpx 30rpx;
  border: 1px solid #e0e0e0;
  border-radius: 30rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.language-option.selected {
  background-color: #4A90E2;
  color: white;
  border-color: #4A90E2;
}

.tags-section {
  margin-top: 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.tag-item {
  padding: 10rpx 20rpx;
  background-color: #f0f0f0;
  border-radius: 30rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 26rpx;
  color: #666;
}

.tag-item.selected {
  background-color: #4A90E2;
  color: white;
}

.tag-select-btn {
  display: inline-block;
  padding: 10rpx 30rpx;
  border: 1px dashed #4A90E2;
  border-radius: 30rpx;
  color: #4A90E2;
  font-size: 26rpx;
}

.tag-selector-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.tag-selector-content {
  width: 80%;
  background-color: white;
  border-radius: 12rpx;
  overflow: hidden;
}

.tag-selector-header {
  padding: 20rpx;
  border-bottom: 1px solid #e0e0e0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.tag-selector-title {
  font-size: 32rpx;
  font-weight: bold;
}

.tag-selector-close {
  font-size: 40rpx;
  color: #999;
}

.tag-selector-list {
  padding: 20rpx;
  max-height: 600rpx;
  overflow-y: auto;
  display: flex;
  flex-wrap: wrap;
}

.tag-selector-item {
  padding: 10rpx 20rpx;
  background-color: #f0f0f0;
  border-radius: 30rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 26rpx;
  color: #666;
}

.tag-selector-item.selected {
  background-color: #4A90E2;
  color: white;
}

.tag-selector-footer {
  padding: 20rpx;
  border-top: 1px solid #e0e0e0;
  display: flex;
  justify-content: flex-end;
}

.tag-confirm-btn {
  padding: 10rpx 30rpx;
  background-color: #4A90E2;
  color: white;
  font-size: 28rpx;
  border-radius: 30rpx;
}

.save-btn {
  margin-top: 50rpx;
  width: 90%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #4A90E2;
  color: white;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-bottom: 30rpx;
}

.picker {
  height: 80rpx;
  line-height: 80rpx;
  color: #333;
}

.age-display {
  color: #666;
  background-color: #f5f5f5;
  padding: 0 20rpx;
  border-radius: 8rpx;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  align-items: center;
}