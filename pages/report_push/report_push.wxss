.container {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  height: 100vh;
  background-color: #f5f5f5;
  padding: 0;
  margin: 0;
}

/* 顶部标题样式 */
.header {
  width: 100%;
  height: 80rpx;
  background-color: #4A90E2;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0;
  z-index: 100;
}

.title {
  color: #ffffff;
  font-size: 36rpx;
  font-weight: bold;
}

/* 成长报告推送内容样式 */
.report-push-container {
  flex: 1;
  width: 95vw;
  margin: 100rpx auto 120rpx;
  padding: 20rpx;
  overflow-y: auto;
  box-sizing: border-box;
}

.report-content-box {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  min-height: 60vh;
}

.report-header {
  display: flex;
  justify-content: center;
  margin-bottom: 15rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.report-date {
  font-size: 24rpx;
  color: #999;
}

.report-content {
  flex: 1;
  padding: 20rpx;
  border-radius: 10rpx;
  background-color: #e8f4ff;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

.report-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  white-space: pre-wrap;
}

/* 话题卡片样式 */
.topic-cards {
  margin-top: 30rpx;
}

.topic-card {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.topic-header {
  background-color: #4A90E2;
  padding: 15rpx 20rpx;
}

.topic-title {
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
}

.topic-body {
  padding: 20rpx;
}

.topic-section {
  margin-bottom: 15rpx;
}

.section-title {
  font-size: 26rpx;
  color: #666;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}

.section-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  display: block;
  margin-bottom: 10rpx;
}

.point-list {
  padding-left: 10rpx;
}

.point-item {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
  display: block;
  margin-bottom: 8rpx;
}

.delete-btn-container {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}

.delete-btn {
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #fff;
  background-color: #ff6b6b;
  border-radius: 35rpx;
}

/* 底部按钮和设置 */
.bottom-container {
  width: 100%;
  position: fixed;
  bottom: 0;
  background-color: #fff;
  padding: 20rpx 0;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.button-group {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 90%;
  margin: 0 auto;
}

.function-btn {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  border-radius: 40rpx;
}

.conversation-btn {
  background-color: #4A90E2;
  color: #ffffff;
  width: 200rpx;
  padding: 0;
}

.push-setting {
  display: flex;
  align-items: center;
}

.push-text {
  font-size: 28rpx;
  color: #666;
  margin-left: 10rpx;
}